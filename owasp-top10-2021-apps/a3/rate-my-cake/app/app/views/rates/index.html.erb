<div class="container-fluid">
  <div class="comment-container">
    <div class="comment-img">
      <%= image_tag("rainbow_cake.jpg", :class => "img-thumbnail") %>
    </div>
    <div class="comment">
      <div class="comment-profile-pic">
        <%= image_tag "cakelover.png" %>
        <div class="comment-profile-pic-username">Cakelover</div>
      </div>
      <div class="comment-description">
        Hey 🖐 ! <br />
        It took some <b>effort</b> but i finally made it. <br />
        Rate my rainbow cake !
      </div>
    </div>
  </div>

  <% @rates.each do |rate| %>
    <div class="comment-container">
      <div class="comment darker">
        <div class="comment-profile-pic">
          <%= image_tag "kind_user.png" %>
          <div class="comment-profile-pic-username">kind_user</div>
        </div>
        <div class="comment-description">
          <b>Rate:</b> <%= rate.rate %> <br>
          <p> <%= raw rate.comment %> </p>
          <%= link_to 'Show', rate %>
          <%= link_to 'Edit', edit_rate_path(rate) %> 
          <%= link_to 'Destroy', rate, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
      </div>
    </div>
  <% end %>

  <div class="button-wraper">
    <%= button_to "Leave a rate", new_rate_path, :class => "btn btn-primary", :method => :get %>
  </div>

</div>
